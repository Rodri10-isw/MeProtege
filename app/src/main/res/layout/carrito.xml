<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:elevation="90dp"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/titulo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#93DDF4"
            android:gravity="center"
            android:text="POST TITLE"
            android:textColor="#000000"
            android:textSize="20dp"></TextView>



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C6ECF8">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="93dp">

                <ImageView
                    android:id="@+id/tvFotoCarr"
                    android:layout_width="112dp"
                    android:layout_height="88dp"
                    />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Piezas por empaque: "
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cantidad de empaques: "
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Color:"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Subtotal: "
                        android:textColor="#0C249C"
                        android:textSize="19dp" />
                </LinearLayout>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titulo2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="piezas"
                            android:textColor="#000000"
                            android:textSize="14dp"></TextView>

                        <TextView
                            android:id="@+id/titulo3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="cantidad"
                            android:textColor="#000000"
                            android:textSize="14dp"></TextView>

                        <TextView
                            android:id="@+id/titulo5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="color"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/titulo4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="total"
                            android:textColor="#0C249C"
                            android:textSize="19dp"></TextView>
                    </LinearLayout>
                </TableRow>

            </TableRow>

        </TableLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>